<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_edit_questions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.learneractivities.ManageQuestionsFragment">

    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/edit_questions_compose_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.compose.ui.platform.ComposeView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/new_question_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/green"
        android:contentDescription="Add Question"
        android:src="@drawable/baseline_add_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/white" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/show_learners_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:backgroundTint="@color/grey"
        android:clickable="true"
        android:contentDescription="Show Course Learners"
        android:src="@drawable/baseline_groups_24"
        app:borderWidth="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/new_question_button"
        app:layout_constraintEnd_toStartOf="@+id/new_question_button"
        app:tint="@color/black" />

</androidx.constraintlayout.widget.ConstraintLayout>