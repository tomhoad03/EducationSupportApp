<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_question_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.learneractivities.ActivityFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/activityTitleTextView"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:text="Data Types Quiz"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/activityDescriptionText"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/activityTitleTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:text="This activity has 10 multiple choice questions"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/startActivityButton"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_below="@id/activityDescriptionText"
            android:layout_centerHorizontal="true"
            android:text="Start Activity" />

        <Button
            android:id="@+id/returnToCorseFragmentButton"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:backgroundTint="@color/red"
            android:text="Back" />

    </RelativeLayout>
</ScrollView>